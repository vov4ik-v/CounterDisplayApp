<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.AdviceFragment">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/titile_economy"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="270dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="25dp"
                        android:translationZ="1dp"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="120dp"
                            android:text="Економія води"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationZ="2dp" />

                        <ImageView
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="-5dp"
                            android:src="@drawable/water" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="25dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView3">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="230dp"
                            android:src="@drawable/wash" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Завантажуйте посудомийну і пральну машину по максимуму. Використовуйте для прання режим без додаткового полоскання."
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView2">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/dry" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="120dp"
                            android:text="При митті посуду вручну вимикайте кран. Включайте воду, лише намиливши весь посуд."
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout

                        android:id="@+id/linearLayout2"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView4">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/titile_economy"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="270dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="25dp"
                        android:translationZ="1dp"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="120dp"
                            android:text="Економія світла"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationZ="2dp" />

                        <ImageView
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="-5dp"
                            android:src="@drawable/light" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView7"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="25dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView5">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="230dp"
                            android:src="@drawable/lampa_main" />

                        <TextView
                            android:layout_width="221dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:text="Використовуйте енергозберігаючі лампи. Це економить до 90% електроенергії. Такі лампи служать до 50 разів довше ніж звичайні."
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView7">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView10"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/wash" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="135dp"
                            android:text="Завантажуйте пральну машину повністю – це економить близько 15%. Якщо вибрана не правильна програма прання, – це збільшує споживання на 30%."
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout

                        android:id="@+id/linearLayout3"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView10">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/titile_economy"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView6"
                        android:layout_width="270dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="25dp"
                        android:translationZ="1dp"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="120dp"
                            android:text="Економія газу"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationZ="2dp" />

                        <ImageView
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="-5dp"
                            android:src="@drawable/gas" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView8"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="25dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView6">

                        <ImageView
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="230dp"
                            android:src="@drawable/boil" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:text="Точно розраховуйте, скільки води потрібно закип'ятити та використати при приготування їжі. "
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView8">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView9"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#0077E8"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/bathroom" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="140dp"
                            android:text="При нагріванні води для купання використовуйте економічну душову насадку та приймайте душ, а не ванну. Це економить воду і газ для її нагріву."
                            android:textAlignment="textStart"
                            android:textColor="@color/white" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout

                        android:id="@+id/linearLayout5"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView9">

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="75dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:background="@color/white" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>