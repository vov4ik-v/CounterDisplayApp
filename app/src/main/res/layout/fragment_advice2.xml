                    </androidx.cardview.widget.CardView>

                    <LinearLayout

                        android:id="@+id/linearLayout5"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
